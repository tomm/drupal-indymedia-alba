/**
 * Redirect the user to the right path
 */
function mobile_tools_menu_redirect_user(){
  $args = arg();
  array_shift($args);
  $site = array_shift($args);
  $path  = implode('/', $args);
  drupal_goto($path, 'device=' . $site);
}

